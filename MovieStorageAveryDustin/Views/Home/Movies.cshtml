@model MovieStorageAveryDustin.Models.MovieResponse
<body>
    <!--Form to input movie information-->
    <form asp-action="SubmitMovie" method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <br /><br />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br /><br />
        <label asp-for="StartYear">Start Year:</label>
        <input asp-for="StartYear" />
        <br /><br />
        <label asp-for="DirectorName">Director Name:</label>
        <input asp-for="DirectorName" />
        <br /><br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="UR">UR</option>
            <option value="NR">NR</option>
        </select>
        <br /><br />
        <label asp-for="Edit">Edited?</label>
        <input asp-for="Edit" type="checkbox" />
        <br />
        <br />
        <label asp-for="LentTo"></label>
        <input asp-for="LentTo" />
        <br /><br />
        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes" type="text"></textarea>
        <br /><br />
        
        <button type="submit">Submit Movie</button>
    </form>
    <!--Displays errors when required fields are empty-->
    <div asp-validation-summary="All"></div>
</body>
